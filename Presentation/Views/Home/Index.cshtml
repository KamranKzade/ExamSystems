@model List<Student>

@{
    Layout = "_Layout";
}

<div class="col-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Hoverable Table</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Number</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <th scope="row">@c.Id</th>
                        <td>@c.StudentNumber</td>
                        <td>@c.FirstName</td>
                        <td>@c.LastName</td>
                        <td>@c.Grade</td>
                        <td>
                            <span>
                                <a class="btn btn-link" href="@Url.Action("EditStudent","Home",new {c.Id})">Edit</a>
                                <a class="btn btn-link" href="@Url.Action("DeleteStudent","Home",new {c.Id})">Delete</a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>