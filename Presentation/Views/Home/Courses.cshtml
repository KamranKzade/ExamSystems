@model List<Course>

@{
    Layout = "_Layout";
}

<div class="col-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Hoverable Table</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Code</th>
                    <th scope="col">Name</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Teacher FirstName</th>
                    <th scope="col">Teacher LastName</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <th scope="row">@c.Id</th>
                        <td>@c.CourseCode</td>
                        <td>@c.CourseName</td>
                        <td>@c.Grade</td>
                        <td>@c.TeacherFirstName</td>
                        <td>@c.TeacherLastName</td>
                        <td>
                            <span>
                                <a class="btn btn-link" href="@Url.Action("EditCourse","Home",new {c.Id})">Edit</a>
                                <a class="btn btn-link" href="@Url.Action("DeleteCourse","Home",new {c.Id})">Delete</a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>